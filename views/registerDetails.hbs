<div id="main-container">

    <div id="kb-left-container">
        <div id="kb-title">
            <h1>knowledge<span class="base">Base</span></h1>
        </div>
        <div id="kb-info">
            <h2>Let us know a little more about you</h2>
        </div>
    </div>

    <div id="kb-right-container">
        <div id="kb-regis">
            <form id="kb-regis-form" action="/register" method="POST">
                <input type="text" name="r_imageURL" placeholder="Image URL" required>
                <textarea name="r_about" cols="60" rows="8" placeholder="A few lines about yourself" required></textarea>
                <input type="text" name="r_country" placeholder="Country" required>
                <input type="date" name="r_birth" placeholder="Date of birth (yyyy/mm/dd)" required>
                <button type="submit">Complete Registration</button>
            </form>
        </div>

    </div>

</div>