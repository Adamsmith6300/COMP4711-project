<div id="main-container">

    <div id="kb-left-container">
        <div id="kb-title">
            <h1>knowledgeBase</h1>
        </div>
        <div id="kb-image-container">
            <img id="kb-img" src="/images/hand-holding-bunch-books-with-apple-top_1325-646.jpg"/>
        </div>
    </div>

    <div id="kb-right-container">
        <div id="kb-login">
            <form id="kb-login-form" action="/login" method="GET">
                <input type="text" name="l_email" placeholder="Email">
                <input type="text" name="l_pass" placeholder="Password">
                <input type="submit" value="Login">
            </form>
        </div>
        <div id="kb-signup">
            <div id="kb-desc">
                <h1>Join the worlds largest community for knowledge sharing</h1>
            </div>  
            <form id="kb-signup-form" action="/signup" method="POST">
                <input type="text" name="s_fName" placeholder="Firstname">
                <input type="text" name="s_lName" placeholder="Lastname">
                <input type="text" name="s_email" placeholder="Email">
                <input type="text" name="s_pass" placeholder="Password">
                <input type="text" name="s_confirmPass" placeholder="Confirm Password">
                <input type="submit" value="Signup">
            </form>
        </div>
    </div>

</div>
