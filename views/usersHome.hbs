        <div class="discussion-area">
            <div>
                <p>Latest discussions</p>
            </div>
            <div>
                {{#each latestPosts}}
                    <div>
                        <img src={{this.imageurl}} />
                        <p>{{this.category}}</p>
                        <p>{{this.heading}}</p>
                        <p>{{this.details}}</p>
                        <p>{{this.replycount}}</p>
                    </div>
                {{/each}}
                <!------------ All the single messages are grouped here ------------->
